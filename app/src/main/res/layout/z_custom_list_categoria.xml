<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/item_nome_cat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="36dp"
        android:layout_marginTop="24dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/item_root_cat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/item_nome_cat"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="64dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/item_parente_cat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/item_root_cat"
        android:layout_alignParentTop="true"
        android:layout_marginTop="61dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/item_posicao_cat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/item_parente_cat"
        android:layout_alignEnd="@+id/item_root_cat"
        android:text="TextView" />
</RelativeLayout>